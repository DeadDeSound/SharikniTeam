<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nezarsaleh.shareknitest.DriverRequestDetails"
    android:background="@drawable/registerbackgroundtest"
    >




    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <com.example.nezarsaleh.shareknitest.Arafa.Classes.CircularNetworkImageView
        android:id="@+id/AccountPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/app_bar"
        android:padding="3dp"
        android:src="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/PassengerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/AccountPhoto"
        android:layout_toRightOf="@+id/AccountPhoto"
        android:text="PassengerName"

        android:layout_below="@+id/app_bar"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/NationalityEnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PassengerName"
        android:layout_alignStart="@+id/PassengerName"
        android:layout_below="@+id/PassengerName"
        android:layout_marginTop="10dp"
        android:text="NationalityEnName"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/PassengerMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NationalityEnName"
        android:layout_alignStart="@+id/NationalityEnName"
        android:layout_below="@+id/NationalityEnName"
        android:layout_marginTop="10dp"
        android:text="PassengerMobile"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txt_Route_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PassengerMobile"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Route"

        android:textSize="18sp" />


    <TextView
        android:id="@+id/RouteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Route_alert"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txt_Route_alert"
        android:layout_toRightOf="@+id/txt_Route_alert"
        android:text="RouteName"
        android:textSize="18sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/txt_request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Route_alert"
        android:layout_alignStart="@+id/txt_Route_alert"
        android:layout_below="@+id/txt_Route_alert"
        android:layout_marginTop="10dp"
        android:text="Request Date"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/RequestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_request_date"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txt_request_date"
        android:layout_toRightOf="@+id/txt_request_date"
        android:text="RequestDate"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_request_Remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_request_date"
        android:layout_alignStart="@+id/txt_request_date"
        android:layout_below="@+id/txt_request_date"
        android:layout_marginTop="10dp"
        android:text="Remarks"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/Remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_request_Remarks"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txt_request_Remarks"
        android:layout_toRightOf="@+id/txt_request_Remarks"
        android:text="Remarks"
        android:textSize="18sp"
        android:textStyle="bold"

        />


    <Button
        android:id="@+id/Alert_Decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_request_Remarks"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="50dp"
        android:background="@drawable/borders_quicksearch_btn"
        android:text="Decline"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"

        />


    <Button
        android:id="@+id/Alert_Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Alert_Decline"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/borders_quicksearch_btn"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />


</RelativeLayout>
