<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e9e9e9"
    tools:context="com.example.nezar.materialtest.ForgetPassword">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Pasword "
        android:layout_below="@+id/toolbar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_forget_pass"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txt_forget_pass"
        android:background="@drawable/bordersedittext"
        android:gravity="center"
        android:hint="Enter ur Number"
        android:lines="1"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColorHint="@color/primaryColor"
        android:textSize="15sp"
        android:id="@+id/edit_Forgetpass_mobile"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edit_Forgetpass_mobile"
        android:gravity="center"
        android:hint="Enter ur Email"
        android:background="@drawable/bordersedittext"
        android:lines="1"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColorHint="@color/primaryColor"
        android:textSize="15sp"
        android:id="@+id/edit_Forgetpass_email"
        />



    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bordersbuttom"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/edit_Forgetpass_email"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_Forgetpass_submit"
        />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_below="@+id/btn_Forgetpass_submit"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="A Verification Meesage has been sent to you with ur password, please check your email and cell phone"
        android:visibility="invisible"
        android:id="@+id/txt_submit"
        />


</RelativeLayout>
