<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nezar.materialtest.QSearch">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EmButtonSearch"
        android:text="Select Emirate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EmTextSearch"
        android:layout_toRightOf="@id/EmButtonSearch"
        android:text="Select Emirate"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RgButtonSearch"
        android:text="Select Emirate"
        android:layout_below="@id/EmButtonSearch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RgTextSearch"
        android:layout_toRightOf="@id/RgButtonSearch"
        android:text="Select Region"
        android:layout_below="@id/EmButtonSearch"/>



    <AutoCompleteTextView
        android:id="@+id/Regions_auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/borders_edit_txt_user_register"
        android:cursorVisible="false"
        android:hint="Nationality"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/primaryColor"
        android:textColorHint="@color/primaryColor"
        android:textSize="15sp"
        android:layout_below="@+id/RgButtonSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

</RelativeLayout>
