<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#576274"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp">


                <TextView
                    android:id="@+id/RouteEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Ride Name"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />




                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RouteEnName"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="~"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FromRegionEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/textView3"
                    android:layout_toLeftOf="@id/textView3"
                    android:layout_toStartOf="@id/textView3"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:text="Jumeirah Beach"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    />


                <TextView
                    android:id="@+id/ToRegionEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Burj Khalifa"
                    android:textColor="#FFFFFF"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="~"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/StartFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/textView5"
                    android:layout_toLeftOf="@id/textView5"
                    android:layout_toStartOf="@id/textView5"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="6:00 Am"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="7:00 Am"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:id="@+id/EndToTime" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Daily"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:id="@+id/BasisEnName"
                    android:layout_marginBottom="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Time :"
                    android:textSize="24sp"
                    android:textColor="@color/primaryColor"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textview40"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:text="6:00 Am"

                    android:layout_below="@+id/textview40"
                    android:layout_toLeftOf="@+id/textview40"
                    android:layout_toStartOf="@+id/textview40"
                    android:layout_marginTop="5dp"
                    android:id="@+id/StartFromTime2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:text="7:00 Am"
                    android:id="@+id/StartToTime"
                    android:layout_alignTop="@+id/textView32"
                    android:layout_toRightOf="@+id/textview40"
                    android:layout_toEndOf="@+id/textview40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/textView32"
                    android:layout_alignTop="@+id/StartFromTime2"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:text="4:00 pm"
                    android:layout_below="@+id/StartFromTime2"
                    android:layout_alignLeft="@+id/StartFromTime2"
                    android:layout_alignStart="@+id/StartFromTime2"
                    android:id="@+id/EndFromTime"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/EndFromTime"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:text="4:30 pm"
                    android:layout_below="@+id/StartToTime"
                    android:layout_alignLeft="@+id/StartToTime"
                    android:layout_alignStart="@+id/StartToTime"
                    android:id="@+id/EndToTime2" />









                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_below="@+id/textview40"
                    android:text="From :"
                    android:textColor="@color/primaryColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FromEmirateEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_below="@+id/textView7"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Dubai"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/FromEmirateEnName"
                    android:layout_toEndOf="@id/FromEmirateEnName"
                    android:layout_toRightOf="@id/FromEmirateEnName"
                    android:text=" - "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/FromRegionEnName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/FromEmirateEnName"
                    android:layout_toEndOf="@+id/textView9"
                    android:layout_toRightOf="@id/textView9"
                    android:text="jumeirah Beach"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/FromEmirateEnName"
                    android:layout_toEndOf="@id/FromRegionEnName2"
                    android:layout_toRightOf="@id/FromRegionEnName2"
                    android:text=" - "
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/FromEmirateEnName"
                    android:layout_toEndOf="@id/textView11"
                    android:layout_toRightOf="@id/textView11"
                    android:text="شارع الجواهر"
                    android:textStyle="italic"
                    android:id="@+id/FromStreetName" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_below="@+id/FromEmirateEnName"
                    android:layout_marginTop="20dp"
                    android:text="To :"
                    android:textColor="@color/primaryColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ToEmirateEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/textView12"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Dubai"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ToEmirateEnName"
                    android:layout_toEndOf="@id/ToEmirateEnName"
                    android:layout_toRightOf="@id/ToEmirateEnName"
                    android:text=" - "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ToRegionEnName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ToEmirateEnName"
                    android:layout_toEndOf="@+id/textView14"
                    android:layout_toRightOf="@id/textView14"
                    android:text="Burj Khalifa"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ToEmirateEnName"
                    android:layout_toEndOf="@id/ToRegionEnName2"
                    android:layout_toRightOf="@id/ToRegionEnName2"
                    android:text=" - "
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/ToStreetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ToEmirateEnName"
                    android:layout_toEndOf="@id/textView16"
                    android:layout_toRightOf="@id/textView16"
                    android:text="دبي مول"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/ToEmirateEnName"
                    android:layout_marginTop="44dp"
                    android:text="No of Seats : "
                    android:textSize="20sp"
                    android:textColor="@color/primaryColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NoOfSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView17"
                    android:layout_toRightOf="@+id/textView17"
                    android:layout_toEndOf="@+id/textView17"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/Mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/NoOfSeats"
                    android:layout_toEndOf="@+id/FromRegionEnName2"
                    android:layout_toRightOf="@+id/FromRegionEnName2"
                    android:text=" Seat(s) available "
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView17"
                    android:layout_alignStart="@+id/textView17"
                    android:layout_below="@+id/textView17"
                    android:layout_marginTop="26dp"
                    android:text="Nationality :"
                    android:textColor="@color/primaryColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NationalityEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView20"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/textView20"
                    android:layout_toRightOf="@+id/textView20"
                    android:text="Egypt"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView20"
                    android:layout_alignStart="@+id/textView20"

                    android:layout_below="@+id/textView20"
                    android:layout_marginTop="25dp"
                    android:text="Prefered Language :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView22"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/textView22"
                    android:layout_toRightOf="@+id/textView22"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:id="@+id/PrefLanguageEnName" />


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
