<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.example.nezarsaleh.shareknitest.Arafa.Classes.CircularNetworkImageView
        android:id="@+id/AccountPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:src="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/PassengerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/AccountPhoto"
        android:layout_toRightOf="@+id/AccountPhoto"
        android:text="Abd El Rahman Tarek"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/PassengerName"
        android:layout_toEndOf="@+id/PassengerName"
        android:text="Send you a join request"
        android:layout_alignBottom="@+id/PassengerName"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:lines="1"
        android:maxLines="1"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PassengerName"
        android:layout_alignStart="@+id/PassengerName"
        android:layout_alignLeft="@+id/PassengerName"
        android:id="@+id/NationalityEnName"
        android:text="Egypt"
        android:layout_marginTop="5dp"

        />

</RelativeLayout>