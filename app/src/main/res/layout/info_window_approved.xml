<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borders_main_info_window"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emirateEn_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="TEST english"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emirateAr_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/info_relative"
        android:layout_alignRight="@+id/info_relative"
        android:layout_below="@+id/emirateEn_name_id"
        android:layout_gravity="end"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:text="دبي"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/info_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emirateAr_name_id"
        android:layout_margin="5dp"
        android:background="@drawable/bordersedittext"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/gmap_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mapicon" />

            <TextView
                android:id="@+id/txt_map_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gmap_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/gmap_icon"
                android:layout_toRightOf="@+id/gmap_icon"
                android:text="Test"
                android:textSize="16sp"

                />


            <TextView
                android:id="@+id/txt_map_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gmap_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_map_lat"
                android:layout_toRightOf="@+id/txt_map_lat"
                android:text="Test"
                android:textSize="16sp"

                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_ride_word_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rides:"
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_ride_word_2"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/txt_ride_word_2"
                android:layout_toRightOf="@+id/txt_ride_word_2"
                android:text="16 Rides"
                android:textSize="14sp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circular_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/primaryColor"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/txt_1"
                android:layout_toEndOf="@+id/txt_1"
                android:layout_toRightOf="@+id/txt_1"
                android:src="@drawable/jeep" />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_1"
                android:layout_toRightOf="@+id/txt_1"
                android:background="@drawable/circular_number"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/primaryColor"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/txt_2"
                android:layout_toEndOf="@+id/txt_2"
                android:layout_toRightOf="@+id/txt_2"
                android:src="@drawable/hatshpack" />

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_2"
                android:layout_toRightOf="@+id/txt_2"
                android:background="@drawable/circular_number"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/primaryColor"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/txt_3"
                android:layout_toEndOf="@+id/txt_3"
                android:layout_toRightOf="@+id/txt_3"
                android:src="@drawable/sidan" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_ride_word_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passengers:"
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_ride_word_3"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/txt_ride_word_3"
                android:layout_toRightOf="@+id/txt_ride_word_3"
                android:text="29 Passengers"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_ride_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming Ride:"
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_ride_word"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/txt_ride_word"
                android:layout_toRightOf="@+id/txt_ride_word"
                android:text="After 6:15 Minutes"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>