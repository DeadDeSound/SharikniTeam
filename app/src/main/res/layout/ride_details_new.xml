<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map_ride_details"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                tools:context="com.example.nezarsaleh.shareknitest.MapsActivity" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#576274"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp">


                <TextView
                    android:id="@+id/From_txt_id_ride_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="From"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/From_txt_id_ride_details"
                    android:layout_toEndOf="@+id/FromEmirateEnName"
                    android:layout_toRightOf="@+id/FromEmirateEnName"
                    android:text="~"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/FromEmirateEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/From_txt_id_ride_details"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/From_txt_id_ride_details"
                    android:layout_toRightOf="@+id/From_txt_id_ride_details"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="FromEmirateEnName"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/FromRegionEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="FromRegionEnName"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/To_txt_id_ride_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/From_txt_id_ride_details"
                    android:layout_marginTop="10dp"
                    android:text="To"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/To_txt_id_ride_details"
                    android:layout_toEndOf="@+id/ToEmirateEnName"
                    android:layout_toRightOf="@+id/ToEmirateEnName"
                    android:text="~"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ToEmirateEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/To_txt_id_ride_details"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/To_txt_id_ride_details"
                    android:layout_toRightOf="@+id/To_txt_id_ride_details"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="ToEmirateEnName"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/ToRegionEnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_toRightOf="@+id/textView4"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="ToRegionEnName"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/StartFromTime"
                    android:layout_toEndOf="@+id/StartFromTime"
                    android:layout_toRightOf="@+id/StartFromTime"
                    android:text="~"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/StartFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ride_details_time_id"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/ride_details_time_id"
                    android:layout_toRightOf="@+id/ride_details_time_id"
                    android:text="StartFromTime"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:lines="1"
                    android:maxLines="1"
                    />


                <TextView
                    android:id="@+id/ride_details_time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/To_txt_id_ride_details"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Time "
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/EndToTime_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:text="EndToTime_"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ride_details_Ride_Days_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ride_details_time_id"
                    android:layout_marginBottom="10dp"
                    android:text="Ride Days"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ride_details_day_of_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ride_details_Ride_Days_txt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/ride_details_Ride_Days_txt"
                    android:layout_toRightOf="@+id/ride_details_Ride_Days_txt"
                    android:text="DDD, DDD, DDD"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:lines="1"
                    android:maxLines="1"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp">


                    <TextView
                        android:id="@+id/ride_details_Pref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Preferences"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ride_details_lang_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ride_details_Pref"
                        android:layout_alignStart="@+id/ride_details_Pref"
                        android:layout_below="@+id/ride_details_Pref"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:text="Language"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PrefLanguageEnName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_lang_txt"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_toEndOf="@+id/ride_details_lang_txt"
                        android:layout_toRightOf="@+id/ride_details_lang_txt"
                        android:text="Languag"
                        android:maxLength="10"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/ride_details_age_range_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_lang_txt"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/PrefLanguageEnName"
                        android:layout_toRightOf="@+id/PrefLanguageEnName"
                        android:text="Age Range"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/AgeRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_lang_txt"
                        android:layout_toEndOf="@+id/ride_details_age_range_txt"
                        android:layout_toRightOf="@+id/ride_details_age_range_txt"
                        android:text="AgeRange"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:lines="1"
                        android:maxLines="1"
                        />


                    <TextView
                        android:id="@+id/ride_details_Gender_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ride_details_lang_txt"
                        android:layout_alignStart="@+id/ride_details_lang_txt"
                        android:layout_below="@+id/ride_details_lang_txt"
                        android:layout_marginTop="20dp"
                        android:text="Gender"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PreferredGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_Gender_txt"
                        android:layout_alignLeft="@+id/PrefLanguageEnName"
                        android:layout_alignStart="@+id/PrefLanguageEnName"
                        android:layout_toEndOf="@+id/ride_details_Gender_txt"
                        android:layout_toRightOf="@+id/ride_details_Gender_txt"
                        android:text="Gender"
                        android:maxLength="5"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_Gender_txt"
                        android:layout_alignLeft="@+id/ride_details_age_range_txt"
                        android:layout_alignStart="@+id/ride_details_age_range_txt"
                        android:text="Smokers"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/IsSmoking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_Gender_txt"
                        android:layout_alignLeft="@+id/AgeRange"
                        android:layout_alignStart="@+id/AgeRange"
                        android:layout_alignTop="@+id/ride_details_Gender_txt"
                        android:text="IsSmoking"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:lines="1"
                        android:maxLines="1"
                        />


                    <TextView
                        android:id="@+id/ride_details_Nat_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ride_details_Gender_txt"
                        android:layout_alignStart="@+id/ride_details_Gender_txt"
                        android:layout_below="@+id/ride_details_Gender_txt"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Nationality"
                        android:textSize="16sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ride_details_Nat_txt"
                        android:layout_alignLeft="@+id/PreferredGender"
                        android:layout_alignStart="@+id/PreferredGender"
                        android:text="NationalityEnName"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/NationalityEnName"
                        />



                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/ride_details_Nat_txt"
                        android:layout_marginTop="20dp"
                        android:id="@+id/ride_details_pref_txt"
                        android:text="Passenger Name"
                        android:layout_marginBottom="20dp"


                        />






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Nationality"
                        android:layout_alignBottom="@+id/ride_details_pref_txt"
                        android:layout_toRightOf="@+id/ride_details_pref_txt"
                        android:layout_toEndOf="@+id/ride_details_pref_txt"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/ride_details_nat_txt_2"
                        />



                    <View
                        android:id="@+id/view_underline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ride_details_nat_txt_2"
                        android:layout_marginBottom="10dp"
                        android:background="#a3a3a3"
                        android:layout_marginTop="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ride_details_pref_txt"
                    android:id="@+id/passenger_relative"
                        android:orientation="vertical"
                        >

                    <ListView
                        android:id="@+id/ride_details_passengers"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"

                        >

                    </ListView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/passenger_relative"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/ride_details_review_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Reviews"
                            android:textColor="@color/primaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/Driver_get_Review_lv"

                            >

                        </ListView>



                    </LinearLayout>



                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
